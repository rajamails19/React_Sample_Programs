// State initializing - it has to be done in the constructor 
// Access the state by this.state.<property_name>

class Raja extends React.Component {
  constructor(props){
    super(props);
    this.state = {lastName: "Vaderav", age:"secret2"}
    
  }
  render(){
    return <h1> This is Raja {this.state.lastName}, {this.state.age} State Component</h1>
  }
}
ReactDOM.render(<Raja />, document.getElementById('root'))
